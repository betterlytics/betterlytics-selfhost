{$DOMAIN} {
	tls {$ACME_EMAIL}

	handle /analytics.js {
		root * /srv/static
		file_server
	}

	handle /health {
		reverse_proxy backend:3001
	}

	handle /event* {
		reverse_proxy backend:3001 {
			header_up X-Real-IP {remote_host}
			header_up X-Forwarded-For {remote_host}
			header_up X-Forwarded-Proto {scheme}
		}
	}

	handle {
		reverse_proxy dashboard:3000 {
			header_up X-Real-IP {remote_host}
			header_up X-Forwarded-For {remote_host}
			header_up X-Forwarded-Proto {scheme}
		}
	}
}
